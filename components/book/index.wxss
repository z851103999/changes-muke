/* components/book/index.wxss */
.container{
  position: relative;
  display: flex;
  width: 240rpx;
  height: 360rpx;
  margin-top: 30rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.container image{
  width: 100%;
  height: 100%;
  border-radius: 2px;
}

.description{
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: column;
  width: 216rpx;
  padding: 5rpx 10rpx 8rpx 15rpx;
  background-color: #ffffff;
  font-size: 24rpx;
  border-bottom-right-radius:2px;
  border-bottom-left-radius:2px;
}

.title{
  margin-top: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.author{
  font-size: 20rpx;
  color: #999999;
  margin-top: -5rpx;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.foot{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 20rpx;
}

.footer{
  color: #666666;
}